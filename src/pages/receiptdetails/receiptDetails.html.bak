<ion-content padding>
<ion-list>
  <ion-item>
    <ion-label color="primary">Total:</ion-label>
    <ion-input placeholder="Total" readonly [(ngModel)]="total"></ion-input>
  </ion-item>

  <ion-item>
    <ion-label color="primary" fixed>Date:</ion-label>
    <ion-input placeholder="Total" readonly [(ngModel)]="date"></ion-input>
  </ion-item>

  <ion-item>
    <ion-label color="primary" fixed>Currency:</ion-label>
    <ion-input placeholder="Total" readonly [(ngModel)]="currency"></ion-input>
  </ion-item>
</ion-list>
</ion-content>

